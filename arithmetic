def generate_arithmetic_sequence(start_term, common_difference, num_terms):
    """
    Generates an arithmetic sequence.

    Args:
        start_term (int/float): The first term of the sequence.
        common_difference (int/float): The common difference between consecutive terms.
        num_terms (int): The number of terms to generate.

    Returns:
        list: A list containing the terms of the arithmetic sequence.
    """
    sequence = []
    for i in range(num_terms):
        term = start_term + i * common_difference
        sequence.append(term)
    return sequence

# Parameters for the arithmetic sequence
start_at = 5
common_diff = 3
number_of_terms = 8

# Generate the sequence
arithmetic_sequence = generate_arithmetic_sequence(start_at, common_diff, number_of_terms)

# Print the generated sequence
print(f"The arithmetic sequence starting at {start_at} with a common difference of {common_diff} for {number_of_terms} terms is:")
print(arithmetic_sequence)
